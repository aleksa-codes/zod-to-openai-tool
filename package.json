{
  "name": "zod-to-openai-tool",
  "version": "0.8.0",
  "description": "Easily create tools from zod schemas to use with OpenAI Assistants and Chat Completions",
  "repository": "https://github.com/alvesvaren/zod-to-openai-tool",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "dev": "tsx watch examples/basic-usage.ts",
    "build": "tsc && tsc -p tsconfig-cjs.json",
    "prepublish": "pnpm run build"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/mjs/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/mjs/index.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "zod",
    "openai",
    "openai-assistants",
    "openai-functions",
    "typescript"
  ],
  "author": "Alve Svar√©n",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.9.1",
    "openai": "^4.19.0",
    "prettier": "^3.1.0",
    "tsx": "^4.1.2",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6",
    "zod": "^3.22.4"
  },
  "dependencies": {
    "zod-to-json-schema": "^3.21.4"
  },
  "peerDependencies": {
    "openai": "^4.19.0",
    "zod": "^3.22.4"
  },
  "peerDependenciesMeta": {
    "openai": {
      "optional": true
    }
  }
}
